<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Hibernate session factory -->
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
		<property name="annotatedClasses">

			<list>
				<value>ma.ensao.youmna.model.Collaborateur</value>
				<value>ma.ensao.youmna.model.Competence</value>
				<value>ma.ensao.youmna.model.Compte</value>
				<value>ma.ensao.youmna.model.Diplome</value>
				<value>ma.ensao.youmna.model.Technologie</value>
				<value>ma.ensao.youmna.model.TechnoPossed</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.query.substitutions">${hibernate.query.substitutions}</prop>
				<prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
				<prop key="hibernate.use_sql_comments">${hibernate.use_sql_comments}</prop>
				<prop key="hibernate.hbm2ddl.auto">${hibernate.hbm2ddl.auto}</prop>
				<prop key="hibernate.dialect">${hibernate.dialect}</prop>
				<prop key="hibernate.search.default.directory_provider">${hibernate.search.default.directory_provider}</prop>
				<prop key="hibernate.search.default.indexBase">${hibernate.search.default.indexBase}</prop>
			</props>
		</property>

		<!-- <property name="mappingResources"> -->
		<!-- <list> -->
		<!-- <value>/hibernate/Stock.hbm.xml</value> -->
		<!-- </list> -->
		<!-- </property> -->

	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory">
			<ref local="sessionFactory" />
		</property>
	</bean>
	
		<bean id="collaborateurDao"
		class="ma.ensao.youmna.dao.impl.CollaborateurDaoImpl"
		autowire="byName" />
		
</beans>